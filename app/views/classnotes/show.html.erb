<%= render @classnote %>
<b>Average rating:</b>
<label><%= @average_review %></label>
<p>Based on <%= @classnote.reviews.count%> reviews</p>
<div>
  <% if current_user.id == @user or current_user.role == 1 %>
    <%= link_to "Edit this classnote", edit_classnote_path(@classnote) %> |
  <% end %>
  <%= link_to "Back to classnotes", classnotes_path %> |
  <%= link_to "Reviews and ratings", classnote_reviews_path(@classnote) %>

  <% if current_user.id == @user or current_user.role == 1 %>
    <%= button_to "Destroy this classnote", @classnote, method: :delete, class: "btn btn-danger" %>
  <% end %>
</div>
